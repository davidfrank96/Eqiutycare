<!--page-title-area start-->
<section class="page-title-area" style="background-image: url(assets/img/bg/page-title-bg1.jpg);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-5">
                <div class="page-title-wrapper">
                    <div class="page-title-inner">
                        <div class="page-title-inner-content theme-bg">
                            <div class="page-title">
                                <h1 class="main-page-title">Login as Caregiver</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-details-area pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12">
                <div class="section-title text-center mb-15">
                    <h2>Login to your account</h2>
                </div>
            </div>

            <div class="col-xl-12 col-lg-12 col-md-12">
                <div class="" id="caregiverlogin">
                    <% if (locals.message) { %> 
                        <div class="text-success">
                            <%= locals.message %> 
                        </div>
                    <% } %>
                    <% if (locals.error) { %>
                        <div class="text-danger">
                            <%= locals.error %>
                        </div>
                    <% } %>
                    <form class="" action="/auth/caregiver-login" method="POST">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="input-area input-email">
                                    <input type="email" class="form-control" name="email" placeholder="Your Email">
                                </div>
                            </div><br><br>
                            <div class="col-xl-12">
                                <div class="input-area input-password">
                                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                                </div>
                            </div> <br><br>
                        </div>
                        <div class="col-12">
                            <div class="submit-btn submit-lg-btn2">
                                <button class="theme_btn" type="submit">Login <i class="fal fa-long-arrow-right"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
